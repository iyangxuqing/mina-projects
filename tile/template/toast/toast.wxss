.toast-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.toast-body {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  min-width: 8.4em;
  min-height: 8.4em;
  max-width: 70%;
  padding: 40rpx;
  border-radius: 10rpx;
  color: #fff;
  word-wrap: break-word;
  word-break: break-all;
  background: rgba(40, 40, 40, 0.75);
  position: fixed;
  z-index: 5000;
  top: 300rpx;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
}

.toast-icon {
  width: 55px;
  height: 55px;
}

.toast-title {
  font-size: 1.1em;
}
