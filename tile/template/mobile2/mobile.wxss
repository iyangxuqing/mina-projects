.mobile {
  margin-bottom: 0;
}

.mobile-row {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
  color: #666;
}

.mobile-row + .mobile-row{
  border-top: 1px solid #ddd;
}

.mobile-number-input,
.mobile-code-input {
  flex-grow: 1;
  font-size: 16px;
  margin-right: 40rpx;
}

.mobile-code-request {
  flex-shrink: 0;
  width: 180rpx;
  line-height: 72rpx;
  color: #fff;
  font-size: 12px;
  text-align: center;
  border-radius: 6rpx;
  box-sizing: border-box;
  background-color: #4bd4c5;
}

.mobile-code-confirm {
  flex-shrink: 0;
  width: 180rpx;
  line-height: 72rpx;
  font-size: 12px;
  text-align: center;
  border-radius: 6rpx;
  box-sizing: border-box;
  color: #666;
  border: 1px solid #4bd4c5;
}

.mobile-row-left {
  width: 160rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

.mobile-row-middle {
  flex-grow: 1;
  display: flex;
  align-items: center;
}

.mobile-row-right {
  width: 64rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

.mobile-number {
  font-size: 24px;
}

.mobile-icon {
  width: 64rpx;
  height: 64rpx;
  opacity: 0.5;
  background-size: cover;
  background-image: url(/template/mobile/images/icon/mobile.png);
}

.notify-message-info {
  color: #10aefe;
}

.notify-message-warn {
  color: #ffbe00;
}

.notify-message-error {
  color: #e64340;
}

.notify-message-success {
  color: #09bb08;
}
