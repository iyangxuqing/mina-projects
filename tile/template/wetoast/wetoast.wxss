/**toast.wxss**/
.wetoast {
	display: none;
}
.wetoast-show {
	display: block;
}
.wetoast-mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
}
.wetoast-body {
	opacity: 0;
	display: flex;
	flex-direction: column;
	position: fixed;
    z-index: 5000;
    min-width: 8.4em;
    min-height: 8.4em;
    max-width: 70%;
    top: 140px;
    left: 50%;
    padding: 15px;
    box-sizing: border-box;
    transform: translateX(-50%);
    background: rgba(40, 40, 40, 0.75);
    border-radius: 5px;
    color: #FFFFFF;
    word-wrap: break-word;
    word-break: break-all;
    align-items: center;
	justify-content: space-around;
}
.wetoast-icon {
	margin-top: 3px;
}
.wetoast-icon-desc {
    width: 55px;
    height: 55px;
    vertical-align: middle;
}
.wetoast-title {
	margin: 3px 0;
	font-size: 1.2em;
}