view {
  box-sizing: border-box;
}

image {
  width: 100%;
  height: 100%;
  display: block;
}

.userInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.userInfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 20rpx;
  border: 1px solid #eee;
}

.userInfo-nickName {
  color: #888;
  margin: 20rpx;
}
