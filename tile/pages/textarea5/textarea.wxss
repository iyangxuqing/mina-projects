/* pages/textarea/textarea.wxss */
.show{
    display: block;
}
.hide{
    display: none;
}
.review-button{
    margin: 10px 0 20px 260px;
}
.comments-container{
    position: relative;
}
.comments{
    transition: transform 200ms linear 300ms;
}
.none{
    width: 100%;
    height: 340rpx;
}
.comment{
    padding-bottom: 20px;
    margin-bottom: 20px;
    border-bottom: 1px solid #ccc;
}
.textarea-container{
    opacity: 0;
    width: 100%;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    box-sizing: border-box;
    /*padding:10rpx 20rpx;*/
}
.review-textarea{
    width: 100%;
    background-color: #eee;
}
.review{
    text-indent: 2em;
    font-style: italic;
}