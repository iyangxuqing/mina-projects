/* pages/test-chooseImage/test-chooseImage.wxss */
.comment-container{
    margin-top: 40rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
}
.comment-text{
    padding: 20rpx;
    border: 1px solid #ccc;
    margin-bottom: 40rpx;
}
.comment-text textarea{
    width: 100%;
    height: 300rpx;
}
.comment-photos{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
}
.comment-photo{
    width: calc((100% - 80rpx)/3);
    height: 196rpx;
    position: relative;
    box-sizing: border-box;
    margin-bottom: 40rpx;
}
.comment-photo:nth-child(3n+2){
    margin-left: 40rpx;
    margin-right: 40rpx;
}
.comment-photo-add-trigger{
    padding: 60rpx;
    opacity: 0.5;
    border: 1px solid #ccc;
}
.comment-photo-del-trigger{
    position: absolute;
    top: -10px;
    right: -10px;
    width: 40px;
    height: 40px;
    padding: 10px;
    box-sizing: border-box;
    background-clip: content-box;
    background-color: rgba(0, 0, 0, 0.7);
}