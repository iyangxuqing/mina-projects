<template name="addressBar">
  <navigator class="bar" url="/pages/addressEdit/addressEdit">
    <view class=" bar-icon" wx:if="{{true}}">
      <image src="/images/icon/address.png"></image>
    </view>
    <view class="bar-label">装修地址</view>
    <view class="bar-value ">
      <view class="bar-value">{{longAddress}}</view>
    </view>
    <view class="bar-mark " wx:if="{{true}}">
      <image src="/images/icon/arrow-right.png"></image>
    </view>
  </navigator>
</template>

