/* pages/testmobileverify/index.wxss */

page {
  box-sizing: border-box;
  padding: 0 30rpx;
}

.mobile {
  /*margin: 40rpx 0;*/
}

.row {
  width: 100%;
  height: 55px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
  color: #666;
  border-bottom: 1px solid #ddd;
}

.row:nth-child(2) {
  /*border-bottom: 0;*/
}

.row-gap {
  margin-top: 40px;
}

.input {
  flex-grow: 1;
  font-size: 16px;
}

.notifyMessage {
  flex-shrink: 0;
  line-height: 36px;
  padding: 10px;
  font-size: 12px;
  color: #e64340;
}

.codeRequest {
  flex-shrink: 0;
  width: 90px;
  line-height: 36px;
  color: #fff;
  font-size: 12px;
  text-align: center;
  border-radius: 3px;
  box-sizing: border-box;
  background-color: #4bd4c5;
}

.codeConfirm {
  flex-shrink: 0;
  width: 90px;
  line-height: 36px;
  color: #fff;
  font-size: 14px;
  text-align: center;
  border-radius: 3px;
  box-sizing: border-box;
  background-color: #4bd4c5;
}

.row-left{
  width: 100px;
  flex-shrink: 0;
  /*display: none;*/
}
.row-middle{
  flex-grow: 1;
}
.row-right{
  width: 32px;
  flex-shrink: 0;
}
.mobile-number{
  font-size: 18px;
}
.icon {
  width: 32px;
  height: 32px;
}
.icon-tele{
  opacity: 0.5;
}