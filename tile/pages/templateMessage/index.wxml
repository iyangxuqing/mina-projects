<form name="entryFrom" report-submit bindsubmit="onEntrySubmit">
  <view class="block">
    <view class="form-head">报名确认</view>
  </view>
  <view class="block">
    <view class="row">
      <view class="label">报名项目</view>
      <view class="value">
        <input type="text" name="name" value="环球雅思" />
      </view>
    </view>
    <view class="row">
      <view class="label">报名时间</view>
      <view class="value">
        <input type="text" name="time" value="2016年8月8日" />
