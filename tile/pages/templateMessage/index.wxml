    <view class="row">
      <view class="label">活动地点</view>
      <view class="value">
        <input type="text" name="address" value="教育教学与图书馆" />
      </view>
    </view>
    <view class="row">
      <view class="label">联系方式</view>
      <view class="value">
        <input type="text" name="contact" value="13890458888" />
      </view>
    </view>
  </view>
  <view class="block">
    <button form-type="submit">确认</button>
  </view>
</form>