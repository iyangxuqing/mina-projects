/* pages/textarea/textarea.wxss */
.show{
    display: block;
}
.hide{
    display: none;
}
.review-button{
    margin: 10px 0 20px 260px;
}
scroll-view.comments-container{
    height: 1340rpx;
}
.comments{
    /*transition: transform 200ms linear;*/
    margin: 0;
}
.comment{
    position: relative;
    padding-bottom: 20px;
    margin-bottom: 20px;
    border-bottom: 1px solid #ccc;
}
.textarea-container{
    width: 100%;
    background-color: #ddd;
    box-sizing: border-box;
    position: relative;
    z-index: 20001;
    display: flex;
    padding: 10px;
}
.review-textarea{
    width: 100%;
    background-color: #eee;
}
.review{
    text-indent: 2em;
    font-style: italic;
}
.review-new-btns{
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    content: flex-end;
}
.review-new-confirm, .review-new-cancal{
    padding-left: 10px;
    color: deepskyblue;
}
.review-new-cancal{
    flex-shrink: 0;
    color: indianred;
    font-size: 40px;
    line-height: 30px;
    
}
.comment-mask{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1000;
}