/* pages/servicerMessage/index.wxss */

page {
  width: 100%;
  height: 100%;
  padding: 0;
  background-color: #e8e8e8;
}

.page-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.caption {
  height: 400rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.caption text {
  color: #fff;
}

.block {
  background-color: #fff;
  padding: 30rpx 40rpx;
  margin-bottom: 20rpx;
}

.block.content {
  position: relative;
}

.block.other {
  flex-grow: 1;
  margin-bottom: 0;
}

.title {
  font-size: 18px;
  font-weight: 600;
  line-height: 2;
  color: #444;
}

.desc {
  color: #999;
}

.contact {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 40rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background-color: rgba(255, 50, 150, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}
