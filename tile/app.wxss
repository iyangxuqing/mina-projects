/**app.wxss**/

@import "template/wetoast/wetoast.wxss";

page {
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #404040;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}

view{
  box-sizing: border-box;
}

image{
    width: 100%;
    height: 100%;
    display: block;
}

.show{
  display: block;
}

.hide{
  display: none;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}