.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: -30rpx;
  margin-right: -30rpx;
  margin-bottom: 40rpx;
}

.head-image {
  width: 100%;
  height: 480rpx;
  margin-bottom: 20rpx;
}

.head-title {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  border-radius: 16rpx;
  background: #cec8c2;
  margin-bottom: 20rpx;
}

.head-desc {
  padding: 0 36rpx;
  margin-bottom: 20rpx;
}

.head-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  padding: 0 180rpx;
  background: #c19408;
}

.body {
  margin-bottom: 20rpx;
}

.body-head {
  margin-bottom: 40rpx;
}

.body-head-icon {
  margin-left: -30rpx;
  margin-right: -30rpx;
}

.icon-image {
  width: 400rpx;
  height: 70rpx;
}

.list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item {
  display: flex;
  flex-direction: column;
  width: 330rpx;
  margin-bottom: 40rpx;
}

.item .thumb {
  width: 330rpx;
  height: 280rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.item .title {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #c19408;
}

.foot-title {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #888;
  text-align: center;
  border-top: 2rpx solid #ccc;
  margin-left: -30rpx;
  margin-right: -30rpx;
}
