.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.head {
  margin-left: -30rpx;
  margin-right: -30rpx;
  margin-bottom: 30rpx;
}

.head-image {
  height: 400rpx;
}

.head-title {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  text-align: center;
  color: #333;
}

.head-logo {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  padding: 0 180rpx;
  background: #07c56f;
}

.list {
  display: flex;
  flex-wrap: wrap;
  font-size: 28rpx;
  justify-content: space-between;
}

.item {
  display: flex;
  flex-direction: column;
  width: 330rpx;
  margin-bottom: 40rpx;
}

.item .thumb {
  width: 330rpx;
  height: 280rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.item .title {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
}
