.container {
  padding: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.item {
  display: flex;
  position: relative;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #ccc;
}

.item:first-child {
  border-top: 1rpx solid #ccc;
}

.image {
  width: 300rpx;
  height: 250rpx;
  flex-shrink: 0;
  border-radius: 4rpx;
  border: 1rpx solid #e6e3e4;
}

.text {
  width: 100%;
  padding-left: 40rpx;
}

.title {
  font-size: 16px;
  line-height: 1.6;
  color: #000;
}

.subTitle {
  font-size: 15px;
  line-height: 1.8;
  color: #353535;
}

.desc {
  font-size: 13px;
  color: #888;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}

.text-foot {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 20rpx;
  width: 360rpx;
}

.time {
  font-size: 14px;
  color: #666;
}

.praise {
  width: 80rpx;
  height: 80rpx;
  padding: 24rpx;
}
