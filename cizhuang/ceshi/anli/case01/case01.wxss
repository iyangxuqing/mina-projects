.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.list {
  margin-left: -30rpx;
  margin-right: -30rpx;
}

.item {
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #ccc;
  display: flex;
  position: relative;
}

.image {
  width: 300rpx;
  height: 250rpx;
  flex-shrink: 0;
  border: 1rpx solid #e6e3e4;
  border-radius: 4rpx;
}

.text {
  padding-left: 40rpx;
  width: 100%;
}

.title {
  color: #000;
  font-size: 16px;
  line-height: 1.6;
}


.subTitle {
  font-size: 15px;
  color: #353535;
  line-height: 1.8;
}

.desc {
  color: #888;
  font-size: 13px;
  margin-bottom: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.createtime {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 20rpx;
  width: 360rpx;
}

.time {
  font-size: 14px;
  color: #666;
}

.praise {
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
}
