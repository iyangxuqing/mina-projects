.container {
  padding: 40rpx;
}

.title {
  font-size: 1.1em;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.createTime {
  color: #666;
  margin-bottom: 20rpx;
}

.article-foot {
  margin-top: 100rpx;
}

.note {
  font-size: 0.9em;
  padding: 20rpx;
  color: #666;
  text-align: center;
  border-top: 1rpx solid #888;
}

.item .title {
  font-size: 1.1em;
  font-weight: 600;
  line-height: 2.6;
  color: #333;
  text-align: center;
  background-color: khaki;
  margin-top: 60rpx;
  margin-bottom: 20rpx;
}

.item .sub-title {
  line-height: 2;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.item .text {
  color: #666;
  margin-bottom: 20rpx;
}

.item .image {
  width: 100%;
  height: auto;
  margin-bottom: 20rpx;
}
